@model IEnumerable<SocialNetwork.Web.Models.PhotoAlbumViewModel>

@{
    ViewBag.Title = "Index";
}

<h2>Meus albums</h2>

<p>
    @Html.ActionLink("Criar Album", "Create")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.AlbumName)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Description)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.AlbumName)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Description)
        </td>
        <td>
            @Html.ActionLink("Edit", "Edit", new { id=item.PhotoAlbumId }) |
            @Html.ActionLink("Details", "Details", new { id=item.PhotoAlbumId }) |
            @Html.ActionLink("Delete", "Delete", new { id=item.PhotoAlbumId })
        </td>
    </tr>
}

</table>
